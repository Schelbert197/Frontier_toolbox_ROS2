<launch>
  <arg name="use_rviz" default="true" />
  <arg name="world"    default="nubot_world.sdf" />
  <include file="$(find-pkg-share nuturtle_description)/launch/nuturtle_rviz.launch.py">
    <arg name="use_jsp" value="none" />
    <arg name="use_rviz" value="$(var use_rviz)" />
  </include>

  <include file="$(find-pkg-share nuturtle_description)/launch/world.launch.xml" >
    <arg name="world" value="$(var world)" />
  </include>

  <node pkg="ros_gz_sim" exec="create" args="-topic /robot_description -x 15 -z 0.3" />
</launch>
