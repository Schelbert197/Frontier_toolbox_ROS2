<launch>
    <arg name="world" default="nubot_world.sdf" />
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
      <arg name="gz_args" value="-r $(find-pkg-share nuturtle_description)/worlds/$(var world)"/>
    </include>
  
    <node pkg="ros_gz_bridge" exec="parameter_bridge"
          args="/model/turtlebot3_burger/odometry@nav_msgs/msg/Odometry[gz.msgs.Odometry
                /model/turtlebot3_burger/tf@tf2_msgs/msg/TFMessage[gz.msgs.Pose_V
                /model/turtlebot3_burger/cmd_vel@geometry_msgs/msg/Twist]gz.msgs.Twist
                /scan@sensor_msgs/msg/LaserScan[gz.msgs.LaserScan
                /world/nubot_world/model/turtlebot3_burger/joint_state@sensor_msgs/msg/JointState[gz.msgs.Model" >
      <remap from="/model/turtlebot3_burger/odometry" to="/odom" />
      <remap from="/model/turtlebot3_burger/cmd_vel" to="/cmd_vel" />
      <remap from="/model/turtlebot3_burger/tf" to="/tf" />
      <remap from="/world/nubot_world/model/turtlebot3_burger/joint_state" to="/joint_states"/>
    </node>
  
  </launch>
  